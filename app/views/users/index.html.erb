<div class="container col-md-10 col-md-offset-1">
  <div class="row">
    <div class="col-md-7">
      <div class="panel panel-default" >
        <div class="panel-heading" >
          <div class="row-fluid" >
            <h3>All Users</h3>                        
            <div class="col-md-4 col-sm-4 col-xs-4"> Name</div>
            <div class="col-md-3 col-sm-3 col-xs-3"> Posts</div>
            <div class="col-md-5 col-sm-5 col-xs-5"> Joined</div>
          </div>
        </div>
        <div class="panel-body" >
          <%@users.each do |user|%>
            <div class="container-fluid" id="users_show">   
              <div class="row-fluid">
                <div class="col-md-1 col-sm-1 col-xs-1 ">  
                  <div class="pull-left"><%= image_tag user.avatar.url(:mini) %>
                  </div>
                </div>
                <div class="col-md-3 col-sm-3 col-xs-3"> 
                  <% unless user.name == "Unknown"%>
                    <%= link_to user.name, user_path(user)%>
                  <% else %>
                    <%= link_to "#{cut_name(user.email)}", user_path(user)%>
                  <% end %>
                </div>
                <div class="col-md-3 col-sm-3 col-xs-2"> 
                  <%= user.posts.count %> 
                </div>
                <div class="col-md-5 col-sm-5 col-xs-5"> 
                  <%= user.created_at.strftime("%d %b. %Y") %> 
                </div>
              </div>
            </div>
          <%end%>
        </div>
      </div>
    </div>        
    <div class="col-md-4 col-md-offset-1">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3>New Users</h3>
        </div>
        <div class="panel-body" >
          <%@newusers.each do |user|%>
            <div class="container-fluid" id="users_show">   
              <div class="col-md-4 col-sm-4 col-xs-4"> <%= image_tag user.avatar.url(:mini) %></div>  
              <div   class="col-md-7 col-sm-7 col-xs-7" id="user_index"> 
                <% unless user.name == "Unknown"%>
                  <%= link_to user.name, user_path(user)%>
                <% else %>
                  <%= link_to "#{cut_name(user.email)}", user_path(user)%>
                <% end %>              
              </div>
            </div>
          <%end%>
        </div>
      </div>
    </div>
  </div>        
</div>        

<%= will_paginate @users, renderer: BootstrapPagination::Rails %>
