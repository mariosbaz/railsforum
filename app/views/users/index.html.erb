                <div class="col-md-3 col-md-offset-4">Posts 
                </div>
                <div class="panel-body" >
                    <%@newusers.each do |user|%>
                    <div class="container" id="posts_topic_show">  
                    
                        <div class="col-md-9" id="user_index"><%=user.email %></div>
                        <div class="col-md-3" id="badge"><span class="badge"><%=user.posts.count %></span></div>
                    </div>
                    <%end%>
                </div>

                </div>
            </div>
        </div>
