<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="panel panel-default" id="users_panel">
                <div class="panel-heading">
                <h2>All Users</h2>
                </div>
                <div class="col-md-5"> User </div>
                <div class="col-md-3 col-md-offset-4">Posts 
                </div>
                <div class="panel-body" >
                    <%@users.each do |user|%>
                    <div class="container" id="posts_topic_show">   
                        <div class="col-md-9" id="user_index"> <%=link_to "#{user.email}", user_path(user)%></div>

                        <div class="col-md-3" id="badge"><span class="badge"><%=user.posts.count %></span></div>
                    </div>
                    <%end%>
                </div>

            </div>
        </div>
        
        <div class="col-md-6">
            <div class="panel panel-default" id="users_panel">
                <div class="panel-heading">
                <h2>New Users</h2>
                </div>
