<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-1">
            <div class="panel panel-default" >
                <div class="panel-heading" >
                    <div class="row-fluid">
                        <h3>All Users</h3>
                        
                        <div class="col-md-3 col-sm-3 col-xs-3"> Pic</div>
                        <div class="col-md-3 col-sm-3 col-xs-3">   Name</div>
                        <div class="col-md-3 col-sm-3 col-xs-3">  Posts</div>
                        <div class="col-md-3 col-sm-3 col-xs-3">   Joined</div>
                  </div>
                </div>
                <div class="panel-body" >
                    <%@users.each do |user|%>
                    <div class="container-fluid" >   
                        <div class="row-fluid">
                          <div class="col-md-3 col-sm-3 col-xs-3">  
                           <%= image_tag user.avatar.url(:mini) %> 
                        </div>
                         <div class="col-md-3 col-sm-3 col-xs-3">   <%=link_to "#{cut_name(user.email)}", user_path(user)%></div>
                          <div class="col-md-3 col-sm-3 col-xs-3"> 
                           <%= user.posts.count %> 
                        </div>
                       <div class="col-md-3 col-sm-3 col-xs-3"> 
                           <%= user.created_at.strftime("%d %b. %Y") %> 
                        </div>
                        </div>

                    </div>
                    <%end%>
                </div>

            </div>
        </div>
        
        <div class="col-md-4">
            <div class="panel panel-default" id="users_panel">
                <div class="panel-heading">
                <h2>New Users</h2>
                </div>
                <div class="panel-body" >
                    <%@newusers.each do |user|%>
                    <div class="container" id="users_show">   
                        <div class="col-md-2" ><%= image_tag user.avatar.url(:mini) %></div>  

                        <div class="col-md-6 pull-right" id="user_index"> <%=link_to "#{cut_name(user.email)}", user_path(user)%></div>
                    </div>
                    <%end%>
                </div>

                </div>
            </div>
        </div>
