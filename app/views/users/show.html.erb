<script>
$(document).ready(function(){
    $("#menu").accordion({collapsible: true, active: false});
});
</script>

<div class= "container col-md-12 col-sm-12 col-xs-12" id="profile_container"> 
  <div class="row">
    <div class="col-md-5 col-md-offset-1 col-sm-6 col-xs-8" id="avatar_medium">
      <div class="container-fluid" id="avatar_container">
	    <%= image_tag @user.avatar.url(:medium) %>	
	  </div>	  
	</div>
	
	<div class="container col-md-6">
	  <div class="container col-md-8 col-md-offset-1 col-sm-5 col-xs-8 user_header">  
	    <div id="about"><%=@user.name%></div></br>
	    <div class="container-fluid">
	      <div class="row-fluid col-md-6 col-sm-6 col-xs-6" >Joined:</div>
	      <div class="row-fluid col-md-6 col-sm-6 col-xs-6">
		    <%=@user.created_at.strftime("%d %b. %Y")%>    
		  </div>
	      <div class="row-fluid col-md-6 col-sm-6 col-xs-6">Birthday:</div>
	      <div class="row-fluid col-md-6 col-sm-6 col-xs-6">
		    <%= @user.birthday %>				    
		  </div>
	      <div class="row-fluid col-md-6 col-sm-6 col-xs-6">Gender:</div>
	      <div class="row-fluid col-md-6 col-sm-6 col-xs-6">
		    <%= @user.gender %></br>
		  </div>
	      <div class="row-fluid col-md-6 col-sm-6 col-xs-6">Posts:</div>
	      <div class="row-fluid col-md-6 col-sm-6 col-xs-6">
	        <%=@user.posts.count%>		    
		  </div>
		  <% if user_signed_in? %>
		  <div class="row-fluid col-md-12 col-sm-12 col-xs-12" id="border_top">
		    <div class="col-md-6"><%= render 'shared/stats'%></div>
			<div class="col-md-6"><%= render 'follow_form'%></div>
			  <% if current_user.id == @user.id %>			   
			      <h4><%= link_to 'Update profile', edit_user_registration_path%></h4>
			  <% end %>
		  </div>
		  <% end %>		    
		</div>
	  </div>      
	<div>
  </div>      
</div>

<div class="container col-md-10 col-md-offset-1">
  <div class="row">
    <div class="col-md-7">
      <div class="container">
	    <div class="row-fluid col-md-6  col-sm-7 col-xs-8">
	      <%if @user.posts.count > 0 %>
	        <div class="panel panel-default">
		      <div class="panel-heading">
			    <h2>My Latest Posts</h2>
		      </div>
		      <div class="panel-body">
			    <% @mylatestposts.each do |post| %>
			      <div class="container" id="posts_show">		 
			        <div id="label"><%=link_to "Browse Topic",topic_path(post.topic_id)%></div>
			        <div id="content"><%=post.content%></div>					 		
				    <div id="label">created  <%=time_ago_in_words(post.updated_at)%> ago </div>
				    <div class="row-fluid">
			          <div class="col-md-12" id="label">
				        <%if user_signed_in? and current_user.id==post.user_id  %>
				          <div id="edit_delete">
					        <%=link_to "Delete",topic_post_path(post.topic,post),method: :delete, 
					          confirm: "Are You sure?",class:"btn  btn-default"%>
					        <%=link_to "Edit",edit_topic_post_path(post.topic, post),
					          class:"btn btn-default"%> 
					      </div>                 
				        <% end %>
			          </div>
			        </div>
		          </div>
			    <%end%>
	          </div>					
	        </div>
	      <%end%>
	    </div>
	    <div class="row-fluid col-md-5 col-sm-7 col-xs-8">
	    	<% if user_signed_in? and current_user.id == @user.id  %>
              <% if @feed_items.any? %>
			    <div class="panel panel-default">
			      <div class="panel-heading">
			        <h3>News Feed</h3>
			      </div>
			      <div class="panel-body" >
		            <div id="menu">
		        	  <% @feed_items.each do |item|%>
			            <h3> <%= item.content[0..2] %>... about <%=time_ago_in_words(item.created_at)%> 
			            	ago by  <strong><%= cut_name(item.user.email) %> </strong></h3>
			            <div>
			              <strong>
			              	<div id="label_topic" >Topic: <%=link_to item.topic.name,topic_path(item.topic_id)%></div></br>
			              </strong>
			              <div id="content_accordion">
			              	 <%= item.content  %> 
			              	</div> 
			            </div>
		            <% end %>
		        </div>
			    </div>
			  </div>
			</div>    
		  <% end %>
  	    <div class="row-fluid col-md-5  col-sm-7 col-xs-8">
	      <% if @user.topics.count > 0 %>
	        <div class="panel panel-default">
		      <div class="panel-heading"><h2>My Topics</h2></div>
		      <div class="panel-body">
		        <% @user.topics.each do |topic|%>
			      <div class="container-fluid" id="posts_show">		 	
			        <div class="row-fluid">
				      <div class="col-md-12" >
				        <div id="label"><%=link_to "Browse Topic",topic_path(topic)%></div>
				        <div id="content"><%=link_to "#{topic.name}",topic_path(topic)%></div> 		
				        <div id="label">created  <%=time_ago_in_words(topic.updated_at)%> ago</div>	
				      </div>
				    </div>
				    <div class="row-fluid">
	                  <div class="col-md-12" id="label">
	                    <% if user_signed_in? and current_user.id==topic.user_id  %>
	                      <div class="btn-group" id="edit_delete">
	                        <%=link_to "Delete",topic , method: :delete, confirm: "Are You sure?",
	                          class:"btn  btn-default"%>
	                        <%=link_to "Edit",edit_topic_path(topic),class:"btn btn-default"%>                 
	                      </div>                 
	                    <% end %>
	                  </div>
	                </div>					 	
	              </div>
	            <% end %>
	          </div>
	        </div>
	      <% else %>
		<div class="col-md-6">
			<%= render 'follow_form' if user_signed_in?%>
		</div>
	  <%end%>
	</div>
  </div>
  </div>

<% end %>
</div>

<% if user_signed_in?%>
<div class="container-fluid">
  <div class="row-fluid">
    <div class='border-form-div'>
      <%= form_for([@topic,Topic.new]) do |f|%>
            <%= render 'shared/error_messages', object: f.object %>
            <p>
              <%=f.label :name, "New Topic"%></br>
              <%=f.text_area :name%>
            </p>
            <div><%= f.submit "Create", class: "btn btn-large btn-primary"%></div>
      <%end%>
    </div>
  </div>
<% end %>

<p id="backtop">  
  <a href="#top"><span></span></a>
</p>
	               
