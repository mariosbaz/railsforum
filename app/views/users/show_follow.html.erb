<% provide(:title, @title) %>
<div class="col-md-6 col-md-offset-3">
  <div class="panel panel-default">
    <div class="panel-heading">
      <% if @title == "followers"%>
          <h3><%= @user.name + " " + @title %> (<%= @users.count %>)</h3>
          <% elsif @title == "Following"%>
            <h3><%= @users.count %> <%= "User".pluralize(@users.count) %> followed by <%= @user.name %></h3>
          <% end %>
        </div>
        <div class="panel-body" >
          <% if @users.any? %>
          <%@users.each do |user|%>
            <div class="container-fluid" id="users_show">   
              <div class="col-md-1 col-sm-3 col-xs-3"> <%= image_tag user.avatar.url(:small) %></div>  
              <div  class="col-md-6 col-sm-6 col-xs-7 pull-right"> 
              	<div id="center">
                  <strong><%=link_to user.name, user_path(user)%></strong>
                </div>
              </div>
            </div>
          <%end%>
        </div>
        <% end %>
      </div>
    </div>    
