<body id="home">
<div class='container'>
<div class="span12 hero-unit" id="center_unit">
    <h1 id="welcome">Welcome to the RailsForum!!!</h1>
    <h2>
      This is the RailsForum. Browse our Posts and Topics or sign in to create your own...
    </h2>    
  </div>
</div>
<div class='container'>
	<div class="navbar-text pull-right">
	<% if user_signed_in? %>
	  <div id="label">Logged in as <strong ><%= current_user.email %></strong>.</div>
	  <%= link_to 'Edit profile', edit_user_registration_path,class: 'btn btn-large' %> 
	  <%= link_to "Logout", destroy_user_session_path, method: :delete, class: 'btn btn-large'   %>
	  <%= link_to "Show users", users_path, class: 'btn btn-large' %>

	<% else %>
	<div class="row">	
	  <%= link_to "Login", new_user_session_path, class: 'btn btn-large'  %>
	  <%= link_to "Show users", users_path, class: 'btn btn-large' %>
	</div>
	<div class="row">	
		<p id="label">New to RailsForum? Create Your Account</p>
		<%=link_to "Signup",new_user_registration_path, class: 'btn btn-large'%>
	</div>
	<% end %>
</div>
</div>
</body>
