<%= will_paginate %>

<div class="container-fluid">
    <div class="row-fluid">
        <div class=" span4 offset4">
        <h1 id="header">All Topics</h1>
       </div>
    </div>
    <div class="container">

<div class="container" id="topic_container">
 <div class="row" id="topic_header">
    <div class="span2">Topic Name</div>
    <div class="span2">Topic Posts</div>
    <div class="span2">Created From</div>
    <div class="span2">Updated</div>
    <div class="span3">Action</div>
</div>
    
  <div class="row">
    <div class="span12">
       <% @topics.each do |topic| %>
        <div class="row" id="topic_box">
            <div class="span2" id="post_content"><%=topic.name %></div>
            <div class="span2"><%=topic.posts.count%>
            </div>
            <div class="span2"><%=topic.topic_author%></div>
            <div class="span2"><%=time_ago_in_words(topic.updated_at)%> ago</div>
            <div class="span3"><%=link_to "Show", topic_path(topic), :class => 'btn' %>
            <%if user_signed_in? and current_user.id==topic.user_id  %>
            <%=link_to "Delete",topic , method: :delete, confirm: "Are You sure?", :class => 'btn'%>
            <%=link_to "Edit",edit_topic_path(topic), :class => 'btn' %>
            <%end%></div>          

        </div>
       <%end%>
    </div>   
    </div>
 
</div>
     


<div class="container-fluid">
    <div class="row-fluid">
        <div class=" span4 offset4">
          <%= link_to "Back", :back, class: "btn btn-large btn-primary"%>
          <%= link_to "New Topic", new_topic_path, class: "btn btn-large btn-primary" %>      
        </div>
    </div>
</div>

	

<%= will_paginate %>
