
<h2>Create a new Topic</h2>
<div class="row">

  <div class="span12 offset2">

	<%= form_for(@topic) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>

	  <%= f.label :name%>
	  <%= f.text_field :name %>	 
      <%= f.hidden_field :user_id %> 

	  <div><%= f.submit "Create", class: "btn btn-large btn-primary"%></div>
	<% end %>

</div>
</div>
