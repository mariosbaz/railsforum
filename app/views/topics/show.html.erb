<div class="container-fluid">
    <div class="row-fluid">
        <div class="span4 offset4">
			<h1 id="header"><%= @topic.name %> </h1> 	
		</div>    
	</div>
</div>


<%if @topic.posts.any?%>
<div class="container-fluid">
    <div class="row-fluid">
        <div class="span4 offset4">
			<h1 id="header">All Posts </h1> 	
		</div>    
	</div>
</div>
	
<div class="container">
<table class="table table-striped" >
	<thead>
	 <tr>
		<th>Post Preview</th>
		<th>Created From</th>
		<th>Posted </th>
		<th>Actions </th>
	</tr>
    </thead>
	<tbody >
		<%=render @posts%>		
		<%= will_paginate @posts%>
	</tbody>
</table>

<%end%>

<table class="table" id="new_posts">
	

</table>


</div>
<div class='border-form-div'>
		<%=form_for([@topic,Post.new], remote: true) do |f|%>
		<p >
			<%=f.label :content, "New Post"%></br>
			<%=f.text_area :content%>
		</p>
		<p><%=f.submit "Add Post", class: "btn btn-large btn-primary"%><%= link_to "Back", :back, class: "btn btn-large btn-primary" %></p>

		<%end%>

</div>




