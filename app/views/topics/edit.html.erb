<h2>This is the edit topic page</h2>
<div class="row">

  <div class="span12 offset2">

	<%= form_for(@topic) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>

	  <%= f.label :name%>
	  <%= f.text_field :name %>	 

	  <div><%= f.submit "Change", class: "btn btn-large btn-primary"%></div>
	<% end %>

</div>
</div>
